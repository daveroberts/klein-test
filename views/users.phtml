<div data-ng-app="usersApp">
  <h1>Users</h1>
  <div data-ng-controller="UsersCtrl">
    <div>User ID: <input type="text" ng-model="userID" /></div>
    <button class="btn" ng-click="getUser()">Get User</button>
    <div>Returned User: {{returnedUser}}</div>
    <div>{{status}}</div>
    <div>
      <table ng-show="users.length">
        <thead>
          <tr><th>ID</th><th>Name</th></tr>
        </thead>
        <tbody>
          <tr ng-repeat="user in users">
            <td>{{user.id}}</td>
            <td>{{user.name}}</td>
            <td>
				<button class="btn" ng-click="deleteUser(user)"><i class="icon-trash"></i> Delete User</button>
			</td>
		</tr>
        </tbody>
      </table>
    </div>
    <div>
      <div>Name <input type="text" ng-model="name" /></div>
      <div><button class="btn" ng-click="createUser()"><i class="icon-plus"></i> Create User</button></div>
    </div>
  </div>
</div>

